rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Permite que usuários autenticados leiam a coleção de usuários.
    // Apenas administradores podem ver a lista completa na página /admin.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Adicione outras regras para suas outras coleções aqui
    // Exemplo:
    // match /posts/{postId} {
    //   allow read, write: if request.auth != null;
    // }
  }
}
